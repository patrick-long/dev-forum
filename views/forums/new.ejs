<%- include('../partials/forumHeader'); %>

<h1 style="margin-top: 20px">Ask a question here</h1>

<div class="new-forum">
    <form action="/forums" method="POST" class="new-forum-form">
        <div class="new-forum-title">
            <p class="form-title">Title</p>
            <hr>
            <p class="form-descriptor">Please be specific | Imagine you're asking a question to another person</p>
            <input type="text" class="form-control" name="title">
        </div>
        <div class="new-forum-content">
            <p class="form-title">Body</p>
            <hr>
            <p class="form-descriptor">Include all information someone might need to respond effectively</p>
            <textarea name="content" class="form-control"></textarea>
        </div>
        <div class="new-forum-tags">
            <p class="form-title">Tags</p>
            <hr>
            <p class="form-descriptor">Add tags to link to your question</p>
            <input type="text" class="form-control" name="tags">
        </div>
    </div>
    <input type="submit" class="new-forum-button btn btn-primary" value="Post your question">
    </form>

